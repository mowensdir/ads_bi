{{ attach_library('adsbi/adsbi.fontawesome') }}
{{ attach_library('adsbi/adsbi.inventory') }}

<div id="inventory-batchshipdate" class="content-wrapper" data-activate="#inventory-batchshipdate-nav">
  <h1>Batch Ship Date Edit</h1>

  <h3 class="my-3">&nbsp;</h3>
  <div class="row">
    <div class="col-6">
      <form id="batchShipDateForm" action="/app/inventory/batch-ship-date/review" method="post">
        <div class="form-group">
          <label for="batchShipDateFormTarget">Choose a dataset target</label>
          <select class="form-control form-control-lg" id="batchShipDateFormTarget" name="target" required>
            <option value="" selected></option>
            <option value="inventoryCompliance">Inventory Upgrades</option>
            <option value="inventoryACS">KS HH Swaps</option>
            <option value="vm2022Updates">VM Updates</option>
          </select>
        </div>
        <div class="form-group">
          <label for="batchShipDateFormData">Paste your data from Excel</label>
          <button type="button" class="btn btn-link text-decoration-none pl-1" data-toggle="modal" data-target="#helpModal">
            <i class="fa-solid fa-circle-info"></i>
          </button>
          <textarea class="form-control" id="batchShipDateFormData" name="data" rows="12" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg" id="batchShipDateFormSubmit">Proceed to Review</button>
      </form>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="helpModal" tabindex="-1" aria-labelledby="helpModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="helpModalLabel">How to paste your data from Excel</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><strong>1. Grab your source data</strong></p>
        <div class="card">
          <img src="/sites/default/files/ship_date_excel.png" class="card-img-top" alt="Excel Screenshot">
          <div class="card-body">
            <p class="card-text">Select and copy a two column range from your Excel spreadsheet where the first column is the target DriverID and the second column is the desired Ship Date.</p>
          </div>
        </div>
        <p class="mt-3"><strong>2. Paste it in the provided text area</strong></p>
        <div class="card">
          <img src="/sites/default/files/ship_date_text.png" class="card-img-top" alt="Text Area Screenshot">
          <div class="card-body">
            <p class="card-text">Once you paste your data into the provided text area, it should look something like this.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>