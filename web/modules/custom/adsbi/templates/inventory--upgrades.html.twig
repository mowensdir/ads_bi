{{ attach_library('adsbi/adsbi.datatables') }}
{{ attach_library('adsbi/adsbi.jquery.number') }}
{{ attach_library('adsbi/adsbi.inventory') }}
{{ attach_library('adsbi/adsbi.inventory.upgrades') }}

<div id="inventory-upgrades" class="content-wrapper" data-activate="#inventory-upgrades-nav">
  <h1>Device Upgrades</h1>

  <h3 class="mt-3">Summary</h3>
  <div class="summary-wrapper m-2 p-2 border">
    <div class="row">
      <label class="col-2">Drivers Affected:</label>
      <div id="summary-total-cases" class="col-1 text-right font-weight-bold font-barlow">{{ total_cases }}</div>
      <label class="col-2">Unresolved:</label>
      <div id="summary-unresolved" class="col-1 text-right font-weight-bold font-barlow"></div>
      <label class="col-2">Resolved:</label>
      <div id="summary-resolved" class="col-1 text-right font-weight-bold font-barlow"></div>
      <label class="col-2">Removed:</label>
      <div id="summary-removed" class="col-1 text-right font-weight-bold font-barlow">{{ removed }}</div>
      <label class="col-2">Shipped:</label>
      <div id="summary-shipped" class="col-1 text-right font-weight-bold font-barlow">{{ shipped }}</div>
      <label class="col-2">Noncompliant HH + VM:</label>
      <div id="summary-nchhvm" class="col-1 text-right font-weight-bold font-barlow"></div>
      <label class="col-2">Noncompliant HH:</label>
      <div id="summary-nchh" class="col-1 text-right font-weight-bold font-barlow"></div>
      <label class="col-2">Noncompliant VM:</label>
      <div id="summary-ncvm" class="col-1 text-right font-weight-bold font-barlow"></div>
    </div>
  </div>

  <h3 class="my-3">Data</h3>
  <div id="datatables-wrapper">
    <ul class="nav nav-tabs mb-3">
      <li class="nav-item">
        <a id="unresolved-tab" class="nav-link active" data-toggle="tab" href="#unresolved">Unresolved (<span id="num-unresolved"></span>)</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#resolved">Resolved (<span id="num-resolved"></span>)</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#removed">Removed ({{ removed }})</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#statebd">State Breakdown</a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="unresolved" class="tab-pane fade show active">
        <table id="noncompliance-table" class="table table-striped table-bordered datatable compact nowrap" style="width:100%">
          <thead>
            <tr>
              <th></th>
              <th>Driver Name</th>
              <th>HH</th>
              <th>VM</th>
              <th>Ship Date</th>
              <th>Last Service</th>
              <th>Days</th>
              <th>Last HH</th>
              <th>Last VM</th>
              <th>Next Service</th>
              <th>State</th>
              <th>Dealer Name</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
      <div id="resolved" class="tab-pane fade">
        <table id="resolved-table" class="table table-striped table-bordered datatable compact nowrap" style="width:100%">
          <thead>
            <tr>
              <th>Driver Name</th>
              <th>License Number</th>
              <th>Ship Date</th>
              <th>Resolved Date</th>
              <th>State</th>
              <th>Dealer</th>
            </tr>
          </thead>
        </table>
      </div>
      <div id="removed" class="tab-pane fade">
        <table id="removed-table" class="table table-striped table-bordered datatable compact nowrap" style="width:100%">
          <thead>
            <tr>
              <th>Driver Name</th>
              <th>License Number</th>
              <th>Removal Date</th>
              <th>State</th>
              <th>Dealer</th>
            </tr>
          </thead>
        </table>
      </div>
      <div id="statebd" class="tab-pane fade">
        <table id="statebd-table" class="table table-striped table-bordered datatable compact nowrap" style="width:100%">
          <thead>
            <tr>
              <th>State</th>
              <th>Drivers Affected</th>
              <th>Unresolved</th>
              <th>Shipped</th>
              <th>Resolved</th>
              <th>Removed</th>
              <th>HH + VM</th>
              <th>HH</th>
              <th>VM</th>
              <th>Progress</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>
